
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer Message</title>
</head>
<body>
    <h2>@ViewData["Message"]</h2>

    <p>
        There are @ViewData["CustomerCount"] customers added to the list.
    </p>

    <table>
        <thead>
            <tr>
                <td width="50px">Id</td>
                <td width="300px">Name</td>
                <td width="100px">Amount</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["CustomerList"] as List<Customer>)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                </tr>    
            }
        </tbody>
    </table>
</body>
</html>
